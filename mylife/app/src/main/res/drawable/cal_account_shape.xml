<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:height="48dp" android:width="48dp" />
            <solid android:color="#a0a0a0" />
            <stroke android:width="2dp" android:color="#ffffff" />
        </shape>
    </item>
    <item android:left="0dp" android:top="0dp" android:gravity="top" >
        <rotate android:fromDegrees="90" android:toDegrees="90"
                android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="line" android:thickness="2dp">
                <stroke android:color="#ff0000" android:width="2dp"   />
            </shape>
        </rotate>

    </item>
</layer-list>
